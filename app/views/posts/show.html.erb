<%= render :partial => @post %>

<h3>Comments</h3>
<hr>
<%= form_for [@post, Comment.new], :remote => true do |f| %>
 <p>
   <%= f.text_area :body, :class => "form-control" %>
 </p>
 <p><%= f.submit "Add comment", :class => 'btn' %></p>
<% end %>
<div id="comments">
  <%= render :partial => @post.comments %>
</div>