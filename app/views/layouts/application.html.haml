!!!
%html
  %head
    %meta{:name => "viewport", :content => "width=device-width, initial-scale=1.0"}
    %title= content_for?(:title) ? yield(:title) : 'Rails Bootstrap'
    %meta{:name => "description", :content => "#{content_for?(:description) ? yield(:description) : 'Rails Bootstrap'}"}
    = stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => true
    = javascript_include_tag 'application', 'data-turbolinks-track' => true
    = csrf_meta_tags
    -#= growlyflash_static_notices
    = auto_discovery_link_tag(:atom, posts_path(:atom))
  %body
    = render 'layouts/navigation'
    = render 'layouts/header'

    .container
      .row
        .col-sm-8.blog-main
          = yield
        .col-sm-3.col-sm-offset-1.blog-sidebar
          = render 'layouts/sidebar'

    = render 'layouts/footer'
