extends layout

block content
  // /.blog-main
  #posts
      - var posts = getPosts(0,5)
      - var page  = 1
      - each post in posts
        // /.blog-post
        .blog-post
          h2.blog-post-title 
            a(href=post.url)
                = post.title
          p.blog-post-meta #{post.date.getMonth()+1}.#{post.date.getDate()}.#{post.date.getFullYear()}
          p
            != post.preview
          div.tags
            - each tag in post.tags
              a(href=tagUrl(tag))
                span.label.label-info #{tag}
          .text-center
            include includes/pagination