extends layout

block content
    .container
      - each post in posts
          div.post
            h1.text-center
              |{
              a(href=post.url)
                = post.title
              | }
            .date #{post.date.getMonth()+1}.#{post.date.getDate()}.#{post.date.getFullYear()}
            div.content
              != post.preview
            div.tags
              - each tag in post.tags
                a(href=tagUrl(tag))
                  span.label.label-info #{tag}

      .text-center
        include includes/pagination
